<?xml version='1.0' encoding='UTF-8'?>
<object xmlns="http://n2oapp.net/framework/config/schema/object-1.0"
        xmlns:n2o="http://n2oapp.net/framework/config/schema/action-invocation-1.0">
    <name>Роль</name>

    <actions>
        <action id="create">
            <invocation>
                <n2o:java-method name="create" bean="roleService">
                    <n2o:arguments>
                        <n2o:argument name="role" class="net.n2oapp.security.admin.model.Role" />
                    </n2o:arguments>
                </n2o:java-method>
            </invocation>
            <in-parameters>
                <param name="name" mapping="[0].name" domain="string" required="true"/>
                <param name="code" mapping="[0].code" domain="string" required="true"/>
                <param name="description" mapping="[0].description" domain="string"/>
                <param name="permissions*.id" mapping="[0].permissionIds" domain="integer[]"/>
            </in-parameters>
            <out-parameters>
                <param name="id" mapping="id"/>
            </out-parameters>
            <success-text>Роль сохранена</success-text>
        </action>

        <action id="update">
            <invocation>
                <n2o:java-method name="update" bean="roleService">
                    <n2o:arguments>
                        <n2o:argument name="role" class="net.n2oapp.security.admin.model.Role" />
                    </n2o:arguments>
                </n2o:java-method>
            </invocation>
            <in-parameters>
                <param name="id" mapping="[0].id" domain="integer" required="true"/>
                <param name="name" mapping="[0].name" domain="string" required="true"/>
                <param name="code" mapping="[0].code" domain="string" required="true"/>
                <param name="description" mapping="[0].description" domain="string"/>
                <param name="permissions*.id" mapping="[0].permissionIds" domain="integer[]"/>
            </in-parameters>
            <out-parameters>
                <param name="id" mapping="id"/>
            </out-parameters>
            <success-text>Роль сохранена</success-text>
        </action>

        <action id="delete">
            <invocation>
                <n2o:java-method name="delete" bean="roleService">
                    <n2o:arguments>
                        <n2o:argument name="id" class="java.lang.Integer" />
                    </n2o:arguments>
                </n2o:java-method>
            </invocation>
            <in-parameters>
                <param name="id" mapping="[0]" domain="integer" required="true"/>
            </in-parameters>
            <confirmation-text>Вы уверены, что хотите удалить роль?</confirmation-text>
            <success-text>Роль удалена</success-text>
        </action>
    </actions>
</object>
