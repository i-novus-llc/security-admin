<?xml version='1.0' encoding='UTF-8'?>
<query xmlns:n2o="http://n2oapp.net/framework/config/schema/n2o-query-executions-1.0"
       xmlns="http://n2oapp.net/framework/config/schema/query-3.0">
    <object-id>${permission.object}</object-id>
    <name>Привелегия</name>
    <execution>
        <n2o:java-criteria bean-name="permissionService" criteria-class="net.n2oapp.security.admin.service.PermissionCriteria" />
    </execution>

    <fields>
        <field>
            <id>id</id>
            <domain>integer</domain>
            <display/>
            <filters auto-generate="true"/>
        </field>
        <field>
            <id>name</id>
            <domain>string</domain>
            <display>name</display>
            <name>Название</name>
            <filters auto-generate="true"/>
        </field>
        <field>
            <id>code</id>
            <domain>string</domain>
            <display>code</display>
            <name>Код</name>
            <filters auto-generate="true"/>
        </field>
        <field>
            <id>parentId</id>
            <domain>integer</domain>
            <display>parentId</display>
        </field>
    </fields>
</query>
