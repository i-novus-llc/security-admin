<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0" object-id="${sec.admin.role.object.id}" name="Роли">
    <list>
        <sql>
            select :select
            from sec.role r
            where :filters
            order by :sorting, id
        </sql>
    </list>
    <count>
        <sql>
            select count(id)
            from sec.role r
            where :filters
        </sql>
    </count>

    <fields>
        <field id="id" domain="integer">
            <select/>
            <sorting/>
            <filters>
                <eq filter-id="id">id = :id</eq>
            </filters>
        </field>
        <field id="name" domain="string" name="Название">
            <select/>
            <sorting/>
            <filters>
                <eq filter-id="name">trim(lower(name)) like '%'||trim(lower(:name))||'%'</eq>
            </filters>
        </field>
        <field id="code" domain="string" name="Код">
            <select/>
            <filters>
                <eq filter-id="code"/>
            </filters>
        </field>
        <field id="description" domain="string" name="Описание">
            <select/>
            <sorting/>
            <filters>
                <eq filter-id="description">trim(lower(description)) like
                    '%'||trim(lower(:description))||'%'
                </eq>
            </filters>
        </field>

