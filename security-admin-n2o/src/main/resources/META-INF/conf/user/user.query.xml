<?xml version='1.0' encoding='UTF-8'?>
<query xmlns:n2o="http://n2oapp.net/framework/config/schema/n2o-query-executions-1.0"
       xmlns="http://n2oapp.net/framework/config/schema/query-3.0">
    <object-id>${user.object}</object-id>
    <name>user</name>
    <execution>
        <n2o:java-criteria bean-name="userService" criteria-class="net.n2oapp.security.admin.service.UserCriteria" />
    </execution>


    <fields>
        <field>
            <id>id</id>
            <domain>integer</domain>
            <display/>
            <filters auto-generate="true"/>
        </field>
        <field>
            <id>username</id>
            <domain>string</domain>
            <display>username</display>
            <name>Имя пользователя</name>
            <filters auto-generate="true"/>
        </field>
        <field>
            <id>email</id>
            <domain>string</domain>
            <display>email</display>
            <name>E-mail</name>
            <filters auto-generate="true"/>
        </field>
        <field>
            <id>surname</id>
            <domain>string</domain>
            <display>surname</display>
            <name>Фамилия</name>
            <filters auto-generate="true"/>
        </field>
        <field>
            <id>name</id>
            <domain>string</domain>
            <display>name</display>
            <name>Имя</name>
            <filters auto-generate="true"/>
        </field>
        <field>
            <id>patronymic</id>
            <domain>string</domain>
            <display>patronymic</display>
            <name>Отчество</name>
            <filters auto-generate="true"/>
        </field>
        <field>
            <id>isActive.id</id>
            <domain>boolean</domain>
            <display>isActive</display>
            <name>Активность</name>
            <filters>
                <filter type="in" filter-field="isActive*.id">isActive</filter>
            </filters>
        </field>
        <field>
            <id>roles*.id</id>
            <domain>integer[]</domain>
            <display>roleIds</display>
            <name>Роли</name>
            <filters>
                <filter type="in" filter-field="roles*.id">roleIds</filter>
            </filters>
        </field>
    </fields>
</query>
