<?xml version='1.0' encoding='UTF-8'?>
<query xmlns:n2o="http://n2oapp.net/framework/config/schema/n2o-query-executions-1.0"
       xmlns="http://n2oapp.net/framework/config/schema/query-3.0">
    <object-id>${sec.role.object}</object-id>
    <name>Роль</name>
    <execution>
        <n2o:sql>
            <n2o:items-query>
                select :select
                from sec.role r
                where :where
            </n2o:items-query>
            <n2o:count-query>
                select count(id)
                from sec.role r
                where :where
            </n2o:count-query>
            <n2o:alias>r</n2o:alias>
        </n2o:sql>
    </execution>

    <fields>
        <field>
            <id>id</id>
            <domain>integer</domain>
            <display/>
            <filters auto-generate="true"/>
        </field>
        <field>
            <id>name</id>
            <domain>string</domain>
            <display>name</display>
            <name>Название</name>
            <filters>
                <filter type="eq" filter-field="name">name like '%'||:name||'%'</filter>
            </filters>
        </field>
        <field>
            <id>description</id>
            <domain>string</domain>
            <display>description</display>
            <name>Описание</name>
            <filters>
                <filter type="eq" filter-field="description">description like '%'||:description||'%'</filter>
            </filters>
        </field>
    </fields>
</query>
