<?xml version='1.0' encoding='UTF-8'?>
<query xmlns:n2o="http://n2oapp.net/framework/config/schema/n2o-query-executions-1.0"
       xmlns="http://n2oapp.net/framework/config/schema/query-3.0">
    <object-id>${sec.admin.user.object.id}</object-id>
    <name>Пользователи</name>
    <execution>
        <n2o:rest>
            <n2o:query>${sec.admin.rest.url}/users</n2o:query>
            <n2o:query-by-id>${sec.admin.rest.url}/users/{id}</n2o:query-by-id>
            <n2o:response-mapping collection="content" count="totalElements"/>
            <n2o:size param-name="size"/>
            <n2o:page param-name="page"/>
        </n2o:rest>
    </execution>


    <fields>
        <field>
            <id>id</id>
            <domain>integer</domain>
            <display/>
            <filters auto-generate="true"/>
        </field>
        <field>
            <id>username</id>
            <domain>string</domain>
            <display>username</display>
            <name>Имя пользователя</name>
            <filters>
                <filter type="eq" filter-field="username">username=:username</filter>
            </filters>
        </field>
        <field>
            <id>email</id>
            <domain>string</domain>
            <display>email</display>
            <name>E-mail</name>
        </field>
        <field>
            <id>surname</id>
            <domain>string</domain>
            <display>surname</display>
            <name>Фамилия</name>
            <filters>
                <filter type="eq" filter-field="surname">surname=:surname</filter>
            </filters>
        </field>
        <field>
            <id>name</id>
            <domain>string</domain>
            <display>name</display>
            <name>Имя</name>
            <filters>
                <filter type="eq" filter-field="name">name=:name</filter>
            </filters>
        </field>
        <field>
            <id>patronymic</id>
            <domain>string</domain>
            <display>patronymic</display>
            <name>Отчество</name>
            <filters>
                <filter type="eq" filter-field="patronymic">patronymic=:patronymic</filter>
            </filters>
        </field>
        <field>
            <id>isActive.id</id>
            <domain>boolean</domain>
            <display>is_active</display>
            <name>Активность</name>
            <filters>
                <filter type="in" filter-field="isActive*.id">isActive*.id=:isActive*.id</filter>
            </filters>
        </field>

        <field>
            <id>roles</id>
            <domain>object[]</domain>
            <display/>
            <name>Роли</name>

        </field>

        <field>
            <id>roleFilter.id</id>
            <domain>string</domain>
            <filters>
                <filter type="in" filter-field="roleFilter*.id"> roleFilter*.id:=roleFilter </filter>
            </filters>
        </field>
    </fields>
</query>
