<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <!-- Название схемы управления доступом -->
    <property name="n2o.security.admin.schema" value="sec"/>

    <!-- Название таблицы с пользователями -->
    <property name="n2o.security.admin.user.table" value="user"/>
    <!-- Название колонки в таблице пользователей, в которой хранится логин -->
    <property name="n2o.security.admin.user.login" value="username"/>
    <!-- Название индекса для поля c логином-->
    <property name="n2o.security.admin.user.username.index" value="user_username_idx_uniq"/>

    <!-- Название таблицы с ролями -->
    <property name="n2o.security.admin.role.table" value="role"/>
    <!-- Название таблицы связи пользователей с ролями -->
    <property name="n2o.security.admin.userrole.table" value="user_role"/>
    <!-- Название колонки, в которой хранится id роли в таблице связи пользователей с ролями-->
    <property name="n2o.security.admin.userrole.column.role" value="role_id"/>
    <!-- Название колонки, в которой хранится id пользователя в таблице связи пользователей с ролями-->
    <property name="n2o.security.admin.userrole.column.user" value="user_id"/>
    <!-- Название constraint для таблицы связи пользователей с ролями-->
    <property name="n2o.security.admin.userrole.constraint.pk" value="user_role_pk"/>
    <!-- Название внешнего constraint для пользователя в таблице связи пользователей с ролями-->
    <property name="n2o.security.admin.userrole.user.constraint.fk" value="user_role_user_fk"/>
    <!-- Название внешнего constraint для роли в таблице связи пользователей с ролями-->
    <property name="n2o.security.admin.userrole.role.constraint.fk" value="user_role_role_fk"/>
    <!-- Название индекса для пользователя в таблице связи пользователей с ролями-->
    <property name="n2o.security.admin.userrole.user.index" value="user_role_user_idx"/>
    <!-- Название индекса для роли в таблице связи пользователей с ролями-->
    <property name="n2o.security.admin.userrole.role.index" value="user_role_role_idx"/>

    <!-- Название таблицы с клиентами -->
    <property name="n2o.security.admin.client.table" value="client"/>
    <!-- Название колонки в таблице клиентов, в которой хранится id(имя) клиента -->
    <property name="n2o.security.admin.client.column.client_id" value="client_id"/>
    <!-- Название колонки в таблице клиентов, в которой хранится секрет клиента -->
    <property name="n2o.security.admin.client.column.client_secret" value="client_secret"/>
    <!-- Название колонки в таблице клиентов, в которой хранится тип авторизации клиента -->
    <property name="n2o.security.admin.client.column.grant_types" value="authorized_grant_types"/>
    <!-- Название колонки в таблице клиентов, в которой хранятся URI разрешённые для редиректа клиента -->
    <property name="n2o.security.admin.client.column.redirect" value="registered_redirect_uri"/>
    <!-- Название колонки в таблице клиентов, в которой хранится время жизни токена-->
    <property name="n2o.security.admin.client.column.token.time" value="access_token_validity_seconds"/>
    <!-- Название индекса для для поля с id клиента -->
    <property name="n2o.security.admin.client.id.index" value="client_idx"/>

</databaseChangeLog>