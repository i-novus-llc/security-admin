<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <!-- Название таблицы с клиентами -->
    <property name="n2o.security.admin.client.table" value="client"/>
    <!-- Название колонки в таблице клиентов, в которой хранится id(имя) клиента -->
    <property name="n2o.security.admin.client.column.client_id" value="client_id"/>
    <!-- Название колонки в таблице клиентов, в которой хранится секрет клиента -->
    <property name="n2o.security.admin.client.column.client_secret" value="client_secret"/>
    <!-- Название колонки в таблице клиентов, в которой хранится тип авторизации клиента -->
    <property name="n2o.security.admin.client.column.grant_types" value="grant_types"/>
    <!-- Название колонки в таблице клиентов, в которой хранятся URI разрешённые для редиректа клиента -->
    <property name="n2o.security.admin.client.column.redirect" value="redirect_uris"/>
    <!-- Название колонки в таблице клиентов, в которой хранится время жизни токена-->
    <property name="n2o.security.admin.client.column.token_time" value="access_token_lifetime"/>
    <!-- Название колонки в таблице клиентов, в которой хранится время жизни refresh токена-->
    <property name="n2o.security.admin.client.column.refresh_token_time" value="refresh_token_lifetime"/>
    <!-- Название колонки в таблице клиентов, в которой хранится URL для выхода-->
    <property name="n2o.security.admin.client.column.logout" value="logout_url"/>
    <!-- Название индекса для для поля с id клиента -->
    <property name="n2o.security.admin.client.id.index" value="client_idx"/>
    <!-- Название таблицы связи клиентов с ролями -->
    <property name="n2o.security.admin.clientrole.table" value="client_role"/>
    <!-- Название колонки, в которой хранится id роли в таблице связи клиентов с ролями-->
    <property name="n2o.security.admin.clientrole.column.role" value="role_id"/>
    <!-- Название колонки, в которой хранится имя клиента в таблице связи клиентов с ролями-->
    <property name="n2o.security.admin.clientrole.column.client" value="client_client_id"/>
    <property name="n2o.security.admin.clientrole.column.client_id" value="client_id"/>
    <!-- Название внешнего constraint для клиента в таблице связи клиентов с ролями-->
    <property name="n2o.security.admin.clientrole.client.constraint.fk" value="client_role_client_fk"/>
    <!-- Название внешнего constraint для роли в таблице связи клиентов с ролями-->
    <property name="n2o.security.admin.clientrole.role.constraint.fk" value="client_role_role_fk"/>
    <!-- Название индекса для клиента в таблице связи клиентов с ролями-->
    <property name="n2o.security.admin.clientrole.client.index" value="client_role_client_idx"/>
    <!-- Название индекса для роли в таблице связи клиентов с ролями-->
    <property name="n2o.security.admin.clientrole.role.index" value="client_role_role_idx"/>


</databaseChangeLog>