<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- n2o -->

    <bean id="simpleAuthorizationApi" class="net.n2oapp.framework.access.simple.SimpleAuthorizationApi">
        <property name="permissionApi" ref="securitySimplePermissionApi"/>
    </bean>

    <bean id="advancedAuthorizationApi" class="net.n2oapp.security.auth.access.AdvancedAuthorizationApi">
        <property name="permissionApi" ref="securitySimplePermissionApi"/>
    </bean>

    <bean id="securitySimplePermissionApi" class="net.n2oapp.security.auth.SecuritySimplePermissionApi"/>

    <bean id="logoutHandler"
          class="net.n2oapp.security.auth.listener.AuthenticationLogoutHandler">
    </bean>

    <bean id="authenticationSuccessHandler"
          class="net.n2oapp.security.auth.listener.AuthenticationSuccessHandler">
        <property name="successUrl" value="${n2o.auth.cas.return.url}/auth/success"/>
    </bean>

    <bean id="authenticationSuccessListener" class="net.n2oapp.security.auth.listener.AuthenticationSuccessListener">
        <property name="eventBus" ref="n2oEventBus"/>
    </bean>

    <bean id="destroyedHandler" class="net.n2oapp.security.auth.listener.SessionDestroyedHandler">
        <property name="eventBus" ref="n2oEventBus"/>
    </bean>

    <bean class="net.n2oapp.security.auth.RoleService"/>

    <!-- spring -->
    <bean id="passwordEncoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder"/>

    <bean class="net.n2oapp.security.auth.SpringSecurityUserDetailsProvider"/>

    <bean id="providerManager" class="org.springframework.security.authentication.ProviderManager">
        <constructor-arg name="providers">
            <list>
                <ref bean="authenticationProvider"/>
            </list>
        </constructor-arg>
    </bean>

    <bean id="n2oJdbcUserDetailsManager" class="net.n2oapp.security.auth.N2oJdbcUserDetailsManager">
        <!--<property name="authenticationManager" ref="providerManager"/>-->
        <property name="passwordEncoder" ref="passwordEncoder"/>
        <property name="transactionTemplate" ref="transactionTemplate"/>
        <property name="authenticationProvider" ref="authenticationProvider"/>
    </bean>

    <bean id="authenticationProvider" class="org.springframework.security.authentication.dao.DaoAuthenticationProvider">
        <property name="userDetailsService" ref="n2oJdbcUserDetailsManager"/>
        <property name="passwordEncoder" ref="passwordEncoder"/>
    </bean>

    <bean id="accessSchemaValidatorOverrided" class="net.n2oapp.security.auth.access.SimpleAccessSchemaValidatorOverrided"/>

    <bean id="currentUserUpdatePasswordService" class="net.n2oapp.security.auth.CurrentUserUpdatePasswordService"/>

</beans>