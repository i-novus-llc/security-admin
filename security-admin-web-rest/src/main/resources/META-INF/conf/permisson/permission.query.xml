<?xml version='1.0' encoding='UTF-8'?>
<query xmlns:n2o="http://n2oapp.net/framework/config/schema/n2o-query-executions-1.0"
       xmlns="http://n2oapp.net/framework/config/schema/query-3.0">
    <object-id>${sec.admin.permission.object.id}</object-id>
    <name>Права доступа</name>
    <execution>
        <n2o:rest>
            <n2o:query>${sec.admin.rest.url}/permissions</n2o:query>
            <n2o:query-by-id>${sec.admin.rest.url}/permissions/{id}</n2o:query-by-id>
            <n2o:response-mapping collection="content" count="totalElements"/>
            <n2o:size param-name="size"/>
            <n2o:page param-name="page"/>
        </n2o:rest>
    </execution>


    <fields>
        <field>
            <id>id</id>
            <domain>integer</domain>
            <display>id</display>
            <filters>
                <filter type="eq" filter-field="id">:id</filter>
            </filters>
        </field>
        <field>
            <id>name</id>
            <domain>string</domain>
            <display>name</display>
            <name>Название</name>
            <filters>
                <filter type="eq" filter-field="name">name=:name</filter>
            </filters>
        </field>
        <field>
            <id>code</id>
            <domain>string</domain>
            <display>code</display>
            <name>Код</name>
            <filters>
                <filter type="eq" filter-field="code">code=:code</filter>
            </filters>
        </field>

        <field>
            <id>parentId</id>
            <domain>integer</domain>
            <display>parentId</display>
            <filters>
                <filter type="eq" filter-field="parentId">parentId=:parentId</filter>
                <filter type="isNull" filter-field="parentIdIsNull">parentIdIsNull=true</filter>
            </filters>
        </field>

        <field>
            <id>hasChildren</id>
            <domain>boolean</domain>
            <display>hasChildren</display>
        </field>
    </fields>
</query>
