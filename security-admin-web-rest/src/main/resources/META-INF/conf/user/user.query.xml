<?xml version='1.0' encoding='UTF-8'?>
<query xmlns:n2o="http://n2oapp.net/framework/config/schema/n2o-query-executions-1.0"
       xmlns="http://n2oapp.net/framework/config/schema/query-3.0">
    <object-id>${sec.admin.user.object.id}</object-id>

    <name>Пользователи</name>
    <execution>
        <n2o:rest>
            <n2o:query>${sec.admin.rest.url}/users</n2o:query>
            <n2o:query-by-id>${sec.admin.rest.url}/users/{id}</n2o:query-by-id>
            <n2o:response-mapping collection="content" count="totalElements"/>
            <n2o:size param-name="size"/>
            <n2o:page param-name="page"/>
        </n2o:rest>
    </execution>


    <fields>
        <field>
            <id>id</id>
            <domain>integer</domain>
            <display/>
            <filters>
                <filter type="eq" filter-field="id">:id</filter>
            </filters>
        </field>
        <field>
            <id>username</id>
            <domain>string</domain>
            <display>username</display>
            <name>Имя пользователя</name>
            <filters>
                <filter type="like" filter-field="username">username=:username</filter>
            </filters>
        </field>
        <field>
            <id>email</id>
            <domain>string</domain>
            <display>email</display>
            <name>E-mail</name>
        </field>

        <field>
            <id>password</id>
            <domain>string</domain>
            <display>password</display>
            <name>Пароль</name>
        </field>

        <field>
            <id>fio</id>
            <domain>string</domain>
            <display>fio</display>
            <name>ФИО</name>
            <filters>
                <filter type="eq" filter-field="fio">fio=:fio</filter>
            </filters>
        </field>

        <field>
            <id>name</id>
            <domain>string</domain>
            <display>name</display>
            <name>Имя</name>
            <filters/>
        </field>

        <field>
            <id>surname</id>
            <domain>string</domain>
            <display>surname</display>
            <name>Фамилия</name>
            <filters/>
        </field>

        <field>
            <id>patronymic</id>
            <domain>string</domain>
            <display>patronymic</display>
            <name>Отчество</name>
            <filters/>
        </field>


        <field>
            <id>isActive</id>
            <domain>boolean</domain>
            <display>isActive</display>
            <name>Активность</name>
            <filters>
                <filter type="eq" filter-field="isActive">isActive=:isActive</filter>
            </filters>
        </field>

        <field>
            <id>roles</id>
            <domain>object[]</domain>
            <display>roles</display>
            <filters>
                <filter type="in" filter-field="roleFilter*.id" domain="integer[]">roles=:roleFilter*.id</filter>
            </filters>
            <name>Роли</name>
        </field>
    </fields>
</query>
