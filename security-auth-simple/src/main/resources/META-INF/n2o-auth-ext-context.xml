<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">




    <bean id="providerManager" class="org.springframework.security.authentication.ProviderManager">
        <constructor-arg name="providers">
            <list>
                <ref bean="authenticationProvider"/>
            </list>
        </constructor-arg>
    </bean>

    <bean id="n2oSimpleDetailManager" class="net.n2oapp.security.auth.simple.N2oSimpleDetailManager">
        <!--<property name="authenticationManager" ref="providerManager"/>-->
        <property name="authenticationProvider" ref="authenticationProvider"/>
    </bean>

    <bean id="authenticationProvider" class="org.springframework.security.authentication.dao.DaoAuthenticationProvider">
        <property name="userDetailsService" ref="n2oSimpleDetailManager"/>
    </bean>

    <bean id="currentUserUpdatePasswordService" class="net.n2oapp.security.auth.simple.CurrentUserUpdatePasswordService"/>

</beans>