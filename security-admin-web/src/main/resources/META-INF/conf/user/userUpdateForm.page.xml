<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-2.0" object-id="${sec.admin.user.object.id}" name="Изменение пользователя">
    <form query-id="${sec.admin.user.query.id}">
        <fields>
            <row>
                <input-text id="username" readonly="true"/>
                <input-text id="email" label="Email" required="${sec.admin.user.email.required}">
                    <validations white-list="emailValidation"/>
                </input-text>
            </row>
            <row>
                <password id="newPassword" label="Новый пароль" visible="${sec.admin.user.password.editable}">
                    <validations white-list="newPasswordLengthValidation"/>
                </password>
                <password id="passwordCheck" label="Подтвердить пароль"
                          visible="${sec.admin.user.password.editable}">
                    <validations white-list="newPasswordCheckValidation"/>
                    <dependencies>
                        <enabling on="password">typeof newPassword != 'undefined' &amp;&amp; newPassword != null &amp;&amp; newPassword != ''</enabling>
                    </dependencies>
                </password>
            </row>
            <input-text id="surname"/>
            <input-text id="name"/>
            <input-text id="patronymic"/>
            <row>
                <col size="10">
                    <input-select id="roles" type="multi" label="Роли" cache="false" required="true"
                                  query-id="${sec.admin.role.query.id}" value-field-id="id" label-field-id="name"/>
                </col>
                <col size="2">
                    <checkbox id="isActive" default-value="true"/>
                </col>
            </row>
        </fields>
    </form>
</simple-page>
