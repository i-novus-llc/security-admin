<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-2.0" name="Создание пользователя">
    <form query-id="${sec.admin.user.query.id}">
        <fields>
            <row>
                <input-text id="username" required="true"/>
                <input-text id="email" label="Email" required="${sec.admin.user.email.required}"/>
            </row>
            <row>
                <password id="password" required="${sec.admin.user.password.input.required}"
                          visible="${sec.admin.user.password.input.visible}" label="Пароль"/>
                <password id="passwordCheck" required="${sec.admin.user.password.input.required}"
                          visible="${sec.admin.user.password.input.visible}" label="Подтвердить пароль">
                    <dependencies>
                        <enabling on="password">typeof password != 'undefined' &amp;&amp; password != null &amp;&amp; password != ''</enabling>
                    </dependencies>
                </password>
            </row>
            <input-text id="surname" required="${sec.admin.user.surname.input.required}"/>
            <input-text id="name" required="${sec.admin.user.name.input.required}"/>
            <input-text id="patronymic"/>
            <row>
                <col size="10">
                    <input-select id="roles" type="multi" label="Роли" cache="false"
                                  required="true" query-id="${sec.admin.role.query.id}"
                                  value-field-id="id" label-field-id="name"/>
                </col>
                <col size="2">
                    <checkbox id="isActive" default-value="true"/>
                </col>
            </row>
        </fields>
    </form>
</simple-page>
