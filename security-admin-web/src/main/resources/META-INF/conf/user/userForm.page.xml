<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-2.0" name="Создание пользователя">
    <form query-id="${sec.admin.user.query.id}">
        <fields>
            <row>
                <input-text id="username" required="true">
                    <validations>
                        <validation ref-id="usernameValidation" target="field"/>
                        <!--<validation ref-id="uniqueUsername"/>-->
                    </validations>
                </input-text>
                <input-text id="email" label="Email" required="${sec.admin.user.email.required}">
                    <validations>
                        <validation ref-id="emailValidation"/>
                    </validations>
                </input-text>
            </row>
            <row>
                <password id="password"
                          required="${sec.admin.user.password.input}" label="Пароль">
                    <validations>
                        <validation ref-id="passwordLengthValidation"/>
                    </validations>
                </password>
                <password id="passwordCheck"
                          required="${sec.admin.user.password.input}" label="Подтвердить пароль">
                    <validations>
                        <validation ref-id="passwordCheckValidation" side="server"/>
                    </validations>
                    <dependencies>
                        <enabling-condition on="password"> typeof password != 'undefined' &amp;&amp; password != null &amp;&amp; password != ''</enabling-condition>
                    </dependencies>
                </password>
            </row>
            <input-text id="surname"/>
            <input-text id="name"/>
            <input-text id="patronymic"/>
            <row>
                <col size="10">
                    <input-select id="roles" type="multi" label="Роли" cache="off" required="true">
                        <query query-id="${sec.admin.role.query.id}" value-field-id="id" label-field-id="name"/>
                    </input-select>
                </col>
                <col size="2">
                    <checkbox id="isActive" default-value="true"/>
                </col>
            </row>
        </fields>
    </form>
</simple-page>
