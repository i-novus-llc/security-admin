<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-2.0"
             name="Создание карточки системы">
    <form upload="defaults" query-id="system">
        <fields>
            <input-text id="name" label="Наименование" required="true"/>
            <input-text id="id" label="Код" required="true"/>
            <text-area id="description" label="Описание"/>
            <field id="showOnInterface" label="Включить отображение системы в едином интерфейсе"
                   visible="${access.system.showOnInterface}">
                <controls>
                    <checkbox id="showOnInterface" src="Switch" default-value="false"/>
                </controls>
            </field>
            <input-text id="shortName" label="Короткое наименование">
                <dependencies>
                    <visibility on="showOnInterface">
                        showOnInterface
                    </visibility>
                    <requiring on="showOnInterface">
                        showOnInterface
                    </requiring>
                </dependencies>
            </input-text>
            <input-text id="url" label="Адрес">
                <dependencies>
                    <visibility on="showOnInterface">
                        showOnInterface
                    </visibility>
                    <requiring on="showOnInterface">
                        showOnInterface
                    </requiring>
                </dependencies>
            </input-text>
            <checkbox id="publicAccess" label="Допускается работа в системе без авторизации">
                <dependencies>
                    <visibility on="showOnInterface">
                        showOnInterface
                    </visibility>

                </dependencies>
            </checkbox>
            <input-text id="viewOrder" domain="integer" label="Порядок отображения системы">
                <dependencies>
                    <visibility on="showOnInterface">
                        showOnInterface
                    </visibility>
                </dependencies>
            </input-text>
        </fields>
    </form>
</simple-page>
