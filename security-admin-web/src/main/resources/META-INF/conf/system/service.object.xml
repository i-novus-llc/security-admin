<?xml version='1.0' encoding='UTF-8'?>
<object xmlns="http://n2oapp.net/framework/config/schema/object-3.0" name="Приложения">

    <operations>
        <operation id="create" success-text="Приложение сохранено">
            <invocation>
                <java method="createApplication" class="net.n2oapp.security.admin.api.service.ApplicationSystemService">
                    <spring/>
                    <arguments>
                        <argument type="class" class="net.n2oapp.security.admin.api.model.Application"/>
                    </arguments>
                </java>
            </invocation>
            <in-parameters>
                <param id="code" mapping="[0].code" domain="string" required="true"/>
                <param id="name" mapping="[0].name" domain="string" required="true"/>
                <param id="systemCode" mapping="[0].systemCode" domain="string" required="true"/>
                <param id="enableClient" mapping="[0].oAuth" domain="boolean" required="true" default-value="false"/>

                <param id="clientSecret" mapping="[0].client.clientSecret" domain="string"/>
                <param id="isClientGrant" mapping="[0].client.isClientGrant" domain="boolean"/>
                <param id="isResourceOwnerPass" mapping="[0].client.isResourceOwnerPass" domain="boolean"/>
                <param id="isAuthorizationCode" mapping="[0].client.isAuthorizationCode" domain="boolean"/>
                <param id="accessTokenLifetime" mapping="[0].client.accessTokenLifetime" domain="integer"/>
                <param id="refreshTokenLifetime" mapping="[0].client.refreshTokenLifetime" domain="integer"/>
                <param id="redirectUris" mapping="[0].client.redirectUris" domain="string[]"/>
                <param id="logoutUrl" mapping="[0].client.logoutUrl" domain="string"/>
                <param id="clientRoles*.id" mapping="[0].client.rolesIds" domain="integer[]"/>
            </in-parameters>
            <out-parameters>
                <param id="id" mapping="code"/>
            </out-parameters>
            <validations/>
        </operation>

        <operation id="update" success-text="Приложение обновлено">
            <invocation>
                <java method="updateApplication" class="net.n2oapp.security.admin.api.service.ApplicationSystemService">
                    <spring/>
                    <arguments>
                        <argument type="class" class="net.n2oapp.security.admin.api.model.Application"/>
                    </arguments>
                </java>
            </invocation>
            <in-parameters>
                <param id="code" mapping="[0].code" domain="string" required="true"/>
                <param id="name" mapping="[0].name" domain="string" required="true"/>
                <param id="systemCode" mapping="[0].systemCode" domain="string" required="true"/>
                <param id="enableClient" mapping="[0].oAuth" domain="boolean" required="true" default-value="false"/>

                <param id="clientSecret" mapping="[0].client.clientSecret" domain="string"/>
                <param id="isClientGrant" mapping="[0].client.isClientGrant" domain="boolean"/>
                <param id="isResourceOwnerPass" mapping="[0].client.isResourceOwnerPass" domain="boolean"/>
                <param id="isAuthorizationCode" mapping="[0].client.isAuthorizationCode" domain="boolean"/>
                <param id="accessTokenLifetime" mapping="[0].client.accessTokenLifetime" domain="integer"/>
                <param id="refreshTokenLifetime" mapping="[0].client.refreshTokenLifetime" domain="integer"/>
                <param id="redirectUris" mapping="[0].client.redirectUris" domain="string[]"/>
                <param id="logoutUrl" mapping="[0].client.logoutUrl" domain="string"/>
                <param id="clientRoles*.id" mapping="[0].client.rolesIds" domain="integer[]"/>
            </in-parameters>
            <out-parameters>
                <param id="id" mapping="code"/>
            </out-parameters>
        </operation>

        <operation id="delete"
                   confirm-text="Вы уверены, что хотите удалить приложение?"
                   success-text="Приложение удалено">
            <invocation>
                <java method="deleteApplication" class="net.n2oapp.security.admin.api.service.ApplicationSystemService">
                    <spring/>
                    <arguments>
                        <argument type="primitive"/>
                    </arguments>
                </java>
            </invocation>
            <in-parameters>
                <param id="code" mapping="[0]" domain="string" required="true"/>
            </in-parameters>
            <validations black-list="uniqServiceCode"/>
        </operation>
    </operations>

    <validations>
        <constraint id="uniqServiceCode" server-moment="before-operation" severity="danger"
                    message="Существует приложение с указанным кодом"
                    result="!(#this)">
            <invocation>
                <java method="isApplicationExist"
                      class="net.n2oapp.security.admin.api.service.ApplicationSystemService">
                    <spring/>
                    <arguments>
                        <argument type="primitive"/>
                    </arguments>
                </java>
            </invocation>
            <in-parameters>
                <param id="id" mapping="[0]" domain="string" required="true"/>
            </in-parameters>
        </constraint>
    </validations>
</object>





