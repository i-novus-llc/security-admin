<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-2.0"
             name="Создание системы" layout="TopBottomLayout">
    <regions>
        <line place="top">
            <form xml:id="main" upload="defaults" query-id="system">
                <fields>
                    <input-text id="name" label="Наименование" required="true"/>
                    <input-text id="id" label="Код" required="true" enabled="false"/>
                    <text-area id="description" label="Описание"/>

                </fields>
            </form>
        </line>
        <line place="bottom">
            <table xml:id="services" depends-on="main" master-field-id="id" detail-field-id=""
        </line>

    </regions>


</page>
