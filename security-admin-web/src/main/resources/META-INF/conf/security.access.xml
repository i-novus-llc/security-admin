<access xmlns="http://n2oapp.net/framework/config/schema/access-2.0">
    <authenticated>
        <object-access object-id="permission" />
        <object-access object-id="system" />
        <object-access object-id="service" />
        <object-access object-id="${access.role.object.id}"/>
    </authenticated>

    <permission id="access.user.read">
        <object-access object-id="${access.user.object.id}"/>
        <page-access page-id="users"/>
    </permission>

    <permission id="access.role.read">
        <object-access object-id="${access.role.object.id}"/>
        <page-access page-id="roles"/>
    </permission>

    <permission id="access.system.read">
        <page-access page-id="systems"/>
    </permission>

    <permission id="access.user.edit">
        <object-access object-id="${access.user.object.id}" operations="*"/>
    </permission>

    <permission id="access.role.edit">
        <object-access object-id="${access.role.object.id}" operations="*"/>
    </permission>

    <permission id="access.system.edit">
        <object-access object-id="system" operations="*"/>
        <object-access object-id="service" operations="*"/>
    </permission>
</access>
