<access xmlns="http://n2oapp.net/framework/config/schema/access-schema-1.0">
    <authenticated>
        <object-access object-id="permission" />
        <object-access object-id="${sec.admin.role.object.id}"/>
    </authenticated>

    <permission id="sec.admin.user.read">
        <object-access object-id="${sec.admin.user.object.id}"/>
        <page-access pages="users"/>
    </permission>

    <permission id="sec.admin.role.read">
        <object-access object-id="${sec.admin.role.object.id}"/>
        <page-access pages="roles"/>
    </permission>

    <permission id="sec.admin.user.edit">
        <object-access object-id="${sec.admin.user.object.id}" actions="*"/>
    </permission>

    <permission id="sec.admin.role.edit">
        <object-access object-id="${sec.admin.role.object.id}" actions="*"/>
    </permission>
</access>
