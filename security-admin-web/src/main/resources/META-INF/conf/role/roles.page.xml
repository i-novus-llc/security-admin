<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-2.0" object-id="${sec.admin.role.object.id}" name="Роли">
    <regions>
        <panel place="single">
            <table name="Роли" query-id="${sec.admin.role.query.id}">
                <toolbar>
                    <button action-id="create" label="Создать"/>
                    <button action-id="update" label="Изменить"/>
                    <button action-id="delete" label="Удалить"/>
                </toolbar>
                <columns>
                    <column text-field-id="name"/>
                    <column text-field-id="description"/>
                    <!-- <column text-field-id="permissions" name="Права доступа">
                         <list label-field-id="name"/>
                     </column>-->
                </columns>
                <filters>
                    <input-text id="name"/>
                    <input-text id="description"/>
                    <!--<input-select-tree id="permissionFilter" ajax="false" label="Права доступа"-->
                                            <!--checkboxes="true">-->
                        <!--<inheritance-nodes parent-field-id="parentId" label-field-id="name" value-field-id="id"-->
                                                <!--query-id="${sec.admin.permission.query.id}"-->
                                                <!--has-children-field-id="hasChildren" search-field-id="name">-->
                        <!--</inheritance-nodes>-->
                    <!--</input-select-tree>-->
                </filters>
                <actions>
                    <action id="create" name="Создать">
                        <show-modal page-id="roleForm" submit-operation-id="create" model="filter"/>
                    </action>
                    <action id="update" name="Изменить">
                        <show-modal page-id="roleFormUpdate" submit-operation-id="update"/>
                    </action>
                    <action id="delete" name="Удалить">
                        <invoke operation-id="delete"/>
                    </action>
                </actions>
            </table>
        </panel>
    </regions>

</page>
