<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-2.0" object-id="${sec.admin.role.object.id}" name="Роли">
    <regions>
        <none place="single">
            <table name="Роли" query-id="${sec.admin.role.query.id}">
                <toolbar>
                    <button action-id="create" label="Создать"/>
                    <button action-id="update" label="Изменить"/>
                    <button action-id="delete" label="Удалить"/>
                </toolbar>
                <columns>
                    <column text-field-id="name"/>
                    <column text-field-id="description"/>
                     <column text-field-id="permissionNames" name="Права доступа">
                         <list label-field-id="name"/>
                     </column>
                </columns>
                <filters>
                    <row>
                        <input-text id="name"/>
                        <input-text id="description"/>
                        <input-select-tree id="permissions" ajax="false" checkboxes="true" label="Права доступа">
                            <inheritance-nodes parent-field-id="parentId" label-field-id="name" value-field-id="id"
                                               query-id="${sec.admin.permission.query.id}"
                                               has-children-field-id="hasChildren" search-field-id="name">
                            </inheritance-nodes>
                        </input-select-tree>
                    </row>
                </filters>
                <actions>
                    <action id="create" name="Создать" model="filter">
                        <show-modal page-id="roleForm" submit-operation-id="create" upload="defaults" object-id="role"/>
                    </action>
                    <action id="update" name="Изменить" model="resolve">
                        <show-modal page-id="roleFormUpdate" submit-operation-id="update" object-id="role"
                                    detail-field-id="id"/>
                    </action>
                    <action id="delete" name="Удалить">
                        <invoke operation-id="delete"/>
                    </action>
                </actions>
            </table>
        </none>
    </regions>

</page>
