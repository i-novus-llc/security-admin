<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-2.0" name="Создание роли">
    <form upload="defaults" query-id="${sec.admin.role.query.id}">
        <fields>
            <input-text id="name" label="Название" required="true"/>
            <input-text id="code" label="Код" required="true"/>
            <input-text id="description" label="Описание"/>
            <input-select-tree id="permissions" ajax="false" label="Права доступа" checkboxes="true" required="false">
                <inheritance-nodes parent-field-id="parentId" label-field-id="name" value-field-id="id"
                                   query-id="${sec.admin.permission.query.id}" has-children-field-id="hasChildren"
                                   search-field-id="name">
                </inheritance-nodes>
            </input-select-tree>
        </fields>
    </form>
</simple-page>
