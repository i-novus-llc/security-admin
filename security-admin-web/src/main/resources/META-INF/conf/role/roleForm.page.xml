<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-2.0"
             name="Создание карточки роли">
    <form upload="defaults" query-id="${access.role.query.id}">
        <fields>
            <input-text id="name" label="Название" required="true"/>
            <input-text id="code" label="Код" required="${access.role.code.required}" visible="${access.role.code.visible}"/>
            <input-text id="description" label="Описание"/>
            <input-select id="system" label="Система" query-id="system" required="${access.system.enabled}"
                          visible="${access.system.enabled}" label-field-id="name"/>
            <input-select id="userLevel" query-id="userLevel" label-field-id="name"
                          visible="${access.level.enabled}" label="Уровень пользователя">
            </input-select>
            <input-select-tree id="permissions" ajax="false" label="Права доступа" checkboxes="true" required="${access.role.permissions.required}">
                <inheritance-nodes parent-field-id="parentCode" label-field-id="name" value-field-id="id"
                                   query-id="permission" has-children-field-id="hasChildren"
                                   search-field-id="name">
                </inheritance-nodes>
                <pre-filters>
                    <eq field-id="systemCode" value="{system.id}"/>
                    <eq field-id="userLevel.id" value="{userLevel.id}"/>
                    <eq field-id="forForm" value="true"/>
                </pre-filters>
                <dependencies>
                    <set-value on="system,userLevel" apply-on-init="false">
                        return null;
                    </set-value>
                </dependencies>
            </input-select-tree>
        </fields>
    </form>
</simple-page>
