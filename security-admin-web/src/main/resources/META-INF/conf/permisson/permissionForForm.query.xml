<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0"
       object-id="${access.permission.object.id}"
       name="Права доступа">
    <list count-mapping="#this.size()" result-mapping="#this">
        <java method="getAllForForm" class="net.n2oapp.security.admin.api.service.PermissionService">
            <spring/>
            <arguments>
                <argument class="net.n2oapp.security.admin.api.criteria.PermissionCriteria" type="criteria"/>
            </arguments>
        </java>
    </list>

    <fields>
        <field id="name" domain="string" name="Название">
            <select mapping="name"/>
        </field>
        <field id="id" domain="string" name="Код">
            <select mapping="code"/>
        </field>
        <field id="parentCode" domain="string">
            <select mapping="parentCode"/>
        </field>
        <field id="systemCode" domain="string">
            <select mapping="systemCode"/>
            <filters>
                <eq filter-id="systemCode" domain="string[]" mapping="systemCode"></eq>
            </filters>
        </field>
        <field id="userLevel" domain="string">
            <select mapping="userLevel?.name"/>
            <filters>
                <eq filter-id="userLevel" domain="string" mapping="userLevel"></eq>
            </filters>
        </field>
    </fields>
</query>
