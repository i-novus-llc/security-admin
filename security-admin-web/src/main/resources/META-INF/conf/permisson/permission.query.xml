<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0" object-id="${sec.admin.permission.object.id}" name="Права доступа">
    <list count-mapping="#this.size()" result-mapping="#this">
        <java method="getAll" class="net.n2oapp.security.admin.api.service.PermissionService">
            <spring bean="permissionService"/>
        </java>
    </list>

    <fields>
        <field id="id" domain="integer">
            <select mapping="id"/>
            <sorting/>
            <filters>
                <eq filter-id="id" mapping="[0]"/>
            </filters>
        </field>
        <field id="name" domain="string" name="Название">
            <select mapping="name"/>
            <sorting/>
            <filters>
                <eq filter-id="name" mapping="name"/>
            </filters>
        </field>
        <field id="code" domain="string" name="Код">
            <select mapping="code"/>
            <filters>
                <eq filter-id="code" mapping="code"/>
            </filters>
        </field>
        <field id="parentId" domain="integer">
            <select mapping="parentId"/>
        </field>
        <field id="hasChildren" domain="boolean">
            <select mapping="hasChildren"/>
        </field>
    </fields>
</query>
