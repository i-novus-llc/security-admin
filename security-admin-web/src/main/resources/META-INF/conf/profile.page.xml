<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-2.0"
             name="Профиль пользователя">
    <form>
        <fields>
            <input-text id="username" label="Логин" default-value="#{username}" enabled="false"/>
            <input-text id="surname" label="Фамилия" default-value="#{surname}" enabled="false"/>
            <input-text id="name" label="Имя" default-value="#{name}" enabled="false"/>
            <input-text id="patronymic" label="Отчество" default-value="#{patronymic}" enabled="false"/>
            <input-text id="email" label="Электронная почта" default-value="#{email}" enabled="false"/>
            <input-text id="departmentName" label="Департамент" default-value="#{departmentName}" enabled="false"/>
        </fields>
    </form>
</simple-page>