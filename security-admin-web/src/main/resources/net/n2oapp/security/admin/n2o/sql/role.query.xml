<?xml version='1.0' encoding='UTF-8'?>
<query xmlns:n2o="http://n2oapp.net/framework/config/schema/n2o-query-executions-1.0"
       xmlns="http://n2oapp.net/framework/config/schema/query-3.0">
    <object-id>${sec.admin.role.object.id}</object-id>
    <name>Роли</name>
    <execution>
        <n2o:sql>
            <n2o:items-query>
                select :select
                from sec.role r
                where :where
                order by :order, id
            </n2o:items-query>
            <n2o:count-query>
                select count(id)
                from sec.role r
                where :where
            </n2o:count-query>
            <n2o:alias>r</n2o:alias>
        </n2o:sql>
    </execution>

    <fields>
        <field>
            <id>id</id>
            <domain>integer</domain>
            <display/>
            <sorting/>
            <filters auto-generate="true"/>
        </field>
        <field>
            <id>name</id>
            <domain>string</domain>
            <display>name</display>
            <name>Название</name>
            <sorting>name</sorting>
            <filters>
                <filter type="eq" filter-field="name">trim(lower(name)) like '%'||trim(lower(:name))||'%'</filter>
            </filters>
        </field>
        <field>
            <id>code</id>
            <domain>string</domain>
            <display>code</display>
            <name>Код</name>
            <filters auto-generate="true"/>
        </field>
        <field>
            <id>description</id>
            <domain>string</domain>
            <display>description</display>
            <name>Описание</name>
            <sorting>description</sorting>
            <filters>
                <filter type="eq" filter-field="description">trim(lower(description)) like '%'||trim(lower(:description))||'%'</filter>
            </filters>
        </field>


        <field>
            <id>permissions</id>
            <domain>object[]</domain>
            <display>(select array_to_json(array_agg(row_to_json(row_js))) from (select p.id, p.name from sec.role_permission
                rp join sec.permission p on p.id=rp.permission_id where rp.role_id=r.id) row_js) </display>
            <name>Права доступа</name>

        </field>

        <field>
            <id>permissionsFilter.id</id>
            <domain>string</domain>
            <filters>
                <filter type="in" filter-field="permissionsFilter*.id">
                    <![CDATA[
                        r.id in (select rol.id from sec.role rol where
                            (select string_to_array(btrim((:permissionsFilter*.id)::varchar, '()'), ',')::varchar[])
                                <@ (select array(select (rolp.permission_id)::varchar FROM sec.role_permission rolp where rolp.role_id = rol.id)))

                    ]]>
                </filter>
            </filters>
        </field>

    </fields>
</query>
