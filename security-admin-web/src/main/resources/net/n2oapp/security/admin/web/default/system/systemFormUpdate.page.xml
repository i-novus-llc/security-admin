<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
      name="Изменение карточки системы">

    <datasources>
        <datasource id="systemsDs" query-id="system">
            <filters>
                <eq field-id="id" param="id"/>
            </filters>
        </datasource>
        <datasource id="serviceDs" query-id="service">
            <dependencies>
                <fetch on="systemsDs" model="resolve"/>
            </dependencies>
            <filters>
                <eq field-id="systemCode" datasource="systemsDs" value="{id}"/>
            </filters>
        </datasource>
    </datasources>
    <regions>
        <form id="main" datasource="systemsDs">
            <fields>
                <input-text id="name" label="Наименование" required="true"/>
                <input-text id="id" label="Код" required="true" enabled="false"/>
                <text-area id="description" label="Описание"/>
                <field id="showOnInterface" label="Включить отображение системы в едином интерфейсе"
                       visible="${access.system.show-on-interface}">
                    <controls>
                        <checkbox id="showOnInterface" src="Switch"/>
                    </controls>
                </field>

                <set depends-on="showOnInterface">
                    <input-text id="shortName" label="Короткое наименование" visible="false">
                        <dependencies>
                            <visibility on="showOnInterface" reset="false">
                                showOnInterface
                            </visibility>
                            <requiring on="showOnInterface">
                                showOnInterface
                            </requiring>
                        </dependencies>
                    </input-text>
                    <input-text id="url" label="Адрес" visible="false">
                        <dependencies>
                            <visibility on="showOnInterface" reset="false">
                                showOnInterface
                            </visibility>
                            <requiring on="showOnInterface">
                                showOnInterface
                            </requiring>
                        </dependencies>
                    </input-text>
                    <checkbox id="publicAccess" label="Допускается работа в системе без авторизации" visible="false">
                        <dependencies>
                            <visibility on="showOnInterface" reset="false">
                                showOnInterface
                            </visibility>
                        </dependencies>
                    </checkbox>
                    <input-text id="viewOrder" domain="integer" label="Порядок отображения системы" visible="false">
                        <dependencies>
                            <visibility on="showOnInterface" reset="false">
                                showOnInterface
                            </visibility>
                        </dependencies>
                    </input-text>
                </set>
            </fields>
        </form>

        <line>
            <table id="services" datasource="serviceDs" name="Приложения">
                <columns>
                    <column text-field-id="id" label="Код"/>
                    <column text-field-id="name" label="Наименование"/>
                    <column text-field-id="enableClient" label="OAuth 2.0">
                        <checkbox enabled="false"/>
                    </column>
                    <column text-field-id="actions" label=" ">
                        <toolbar>
                            <button id="delete" label="Удалить" type="icon" icon="fa fa-trash">
                                <invoke operation-id="delete"/>
                            </button>
                        </toolbar>
                    </column>
                </columns>
                <rows>
                    <click>
                        <open-page page-id="serviceUpdateForm" submit-operation-id="update" route="/:code/update"
                                   object-id="service">
                            <params>
                                <path-param name="code" value="{id}"/>
                            </params>
                        </open-page>
                    </click>
                </rows>
                <toolbar>
                    <button id="createService" label="Создать" disable-on-empty-model="false">
                        <open-page page-id="serviceForm" submit-operation-id="create"
                                   object-id="service" route="/create" close-after-submit="true">
                        </open-page>
                    </button>
                </toolbar>
            </table>
        </line>
    </regions>
</page>
