<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0"
       object-id="${access.user.object.id}" name="Пользователи">
    <list result-mapping="['content']" count-mapping="['totalElements']">
        <java method="findAll" class="net.n2oapp.security.admin.api.service.UserService">
            <spring/>
            <arguments>
                <argument class="net.n2oapp.security.admin.api.criteria.UserCriteria" type="criteria" name="criteria"/>
            </arguments>
        </java>
    </list>
    <unique result-mapping="#this">
        <java method="getById" class="net.n2oapp.security.admin.api.service.UserService">
            <spring/>
            <arguments>
                <argument type="primitive"/>
            </arguments>
        </java>
    </unique>


    <fields>
        <field id="id" domain="integer">
            <select mapping="id"/>
            <sorting/>
            <filters>
                <eq filter-id="id" mapping="[0]"/>
            </filters>
        </field>

        <field id="username" domain="string" name="Имя пользователя">
            <select mapping="username"/>
            <sorting/>
            <filters>
                <like filter-id="username" mapping="['criteria'].username"/>
            </filters>
        </field>

        <field id="surname" domain="string" name="Фамилия">
            <select mapping="surname"/>
            <filters>
                <like filter-id="surname" mapping="['criteria'].surname"/>
            </filters>
        </field>

        <field id="name" domain="string" name="Имя">
            <select mapping="name"/>
            <filters>
                <eq filter-id="name" mapping="name"/>
            </filters>
        </field>

        <field id="patronymic" domain="string" name="Отчество">
            <select mapping="patronymic"/>
            <filters>
                <eq filter-id="patronymic" mapping="['criteria'].patronymic"/>
            </filters>
        </field>

        <field id="email" domain="string" name="E-mail">
            <select mapping="email"/>
            <filters>
                <eq filter-id="email" mapping="['criteria'].email"/>
            </filters>
        </field>

        <field id="isActive" domain="boolean" name="Активность">
            <select mapping="isActive"/>
            <sorting/>
            <filters>
                <eq filter-id="isActive" mapping="['criteria'].isActive" domain="string"/>
            </filters>
        </field>

        <field id="fio" domain="string" name="ФИО">
            <select mapping="['fio']"/>
            <sorting/>
            <filters>
                <eq filter-id="fio" mapping="['criteria'].fio"/>
            </filters>
        </field>

        <field id="roles" domain="object[]" name="Роли">
            <filters>
                <in filter-id="roles*.id" domain="integer[]" mapping="['criteria'].roleIds"/>
            </filters>
        </field>

        <field id="snils" domain="string" name="СНИЛС">
            <select mapping="snils"/>
        </field>

        <field id="system" domain="object">
            <filters>
                <eq filter-id="system.id" domain="string[]" mapping="['criteria'].systems"/>
            </filters>
        </field>

        <field id="userLevel">
            <filters>
                <eq filter-id="userLevel.id" domain="string" mapping="['criteria'].userLevel"/>
            </filters>
        </field>

        <field id="department">
            <filters>
                <eq filter-id="department.id" domain="integer" mapping="['criteria'].departmentId"/>
            </filters>
        </field>

        <field id="region">
            <select/>
            <filters>
                <eq filter-id="region.id" domain="integer" mapping="['criteria'].regionId"/>
            </filters>
        </field>

        <field id="organization">
            <filters>
                <eq filter-id="organization.id" domain="integer" mapping="['criteria'].organizationId"/>
            </filters>
        </field>

    </fields>
</query>
